<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.f1x.mtcdtools.NewBindingActivity">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerKeyInputType"
        android:spinnerMode="dialog"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ObtainKeyInputButton"
        android:id="@+id/buttonObtainKeyInput"
        android:layout_below="@+id/textViewKeyCodeLabel"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/KeyCodeTextView"
        android:id="@+id/textViewKeyCodeLabel"
        android:layout_below="@+id/spinnerKeyInputType"
        android:layout_alignStart="@+id/spinnerKeyInputType"
        android:layout_marginTop="54dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SaveButton"
        android:id="@+id/buttonSaveNew"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/buttonCancelNew" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CancelButton"
        android:id="@+id/buttonCancelNew"
        android:layout_alignTop="@+id/buttonSaveNew"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewKeyCode"
        android:text="@string/DefaultKeyCodeLabel"
        android:layout_alignTop="@+id/textViewKeyCodeLabel"
        android:layout_toEndOf="@+id/textViewKeyCodeLabel" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerApplication"
        android:layout_below="@+id/buttonObtainKeyInput"
        android:layout_alignParentStart="true"
        android:layout_marginTop="89dp"
        android:layout_alignEnd="@+id/buttonObtainKeyInput"
        android:spinnerMode="dialog" />

</RelativeLayout>
