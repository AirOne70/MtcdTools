<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.f1x.mtcdtools">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".service.MtcdService" />

        <receiver android:name=".BootCompletedBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity android:name=".activities.named.objects.actions.CreateActionActivity" />
        <activity android:name=".activities.input.BindingActivity" />
        <activity android:name=".activities.named.objects.ActionsListActivity" />
        <activity android:name=".activities.named.objects.actions.KeyActionActivity" />
        <activity android:name=".activities.named.objects.actions.LaunchActionActivity" />
        <activity android:name=".activities.named.objects.actions.StartActivityActionActivity" />
        <activity android:name=".activities.named.objects.actions.BroadcastIntentActionActivity" />
        <activity android:name=".activities.managing.ManageBindingsActivity" />
        <activity android:name=".activities.input.ObtainKeysSequenceActivity" />
        <activity android:name=".activities.managing.ManageNamedObjectsActivity" />
        <activity android:name=".activities.named.objects.ActionsSequenceActivity" />
        <activity android:name=".activities.named.objects.ModeListActivity" />
        <activity android:name=".activities.managing.ManageAutorunActivity" />
        <activity
            android:name=".activities.dispatching.ActionsListDispatchActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity android:name=".activities.SettingsActivity"/>
        <activity android:name=".activities.dispatching.VoiceDispatchActivity"
            android:launchMode="singleTask"
            android:screenOrientation="landscape"
            android:theme="@style/AlertDialogTheme"/>
    </application>

</manifest>